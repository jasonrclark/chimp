use io;
use os;
use chimpunit;

main argv {
  # TODO: Suite/chimprunner to print start/finish/counts?
  io.print("Running Chimp Tests");

  chimpunit.test("if positive", fn { |t|
    var executed = false;
    if true {
      executed = true;
    }

    t.not_equals(false, executed);
  });

  chimpunit.test("if negative", fn { |t|
    if true {
      t.fail("Executed false branch!");
    }
  });

  io.print("");
}
