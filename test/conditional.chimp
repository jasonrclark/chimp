use io;
use os;
use assert;
use chimpunit;

main argv {
  # TODO: Suite/chimprunner to print start/finish/counts?
  io.print("Running Chimp Tests");

  # TODO: Should this built-in class be test, or suite?
  # Suspecting suite, as we'll use it across multiple chimpunit.test calls
  test().fail();

  chimpunit.test("if positive", fn {
    var executed = false;
    if true {
      executed = true;
    }

    assert.eq(true, executed);
  });

  chimpunit.test("if negative", fn {
    if false {
      assert.fail("Executed false branch!");
    }
  });

  io.print("");
}
